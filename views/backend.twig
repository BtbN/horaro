{% extends "layout.twig" %}
{% import "macros.twig" as macros %}

{% block navigation %}
<ul class="nav navbar-nav">
	<li><a href="/-/home"><i class="fa fa-home"></i> Home</a></li>
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-gamepad"></i> My Events <span class="caret"></span></a>
		<ul class="dropdown-menu">
			{% for event in app.user.events %}
			<li><a href="/-/events/{{ event.id }}" class="h-jail">{{ event.name }}</a></li>
			{% endfor %}

			{% if app.user.events|length > 0 %}
			<li class="divider"></li>
			{% endif %}
			<li><a href="/-/events/new">Newâ€¦</a></li>
		</ul>
	</li>
</ul>

<ul class="nav navbar-nav navbar-right">
	<li>
		<a href="/-/profile" class="h-jail">
			<i class="fa fa-cog"></i>
			{{ app.user.name }}
			{% if app.user.gravatarHash %}
			<img src="//www.gravatar.com/avatar/{{ app.user.gravatarHash }}?size=23&amp;d=retro&amp;r=pg" class="h-avatar" alt="" />
			{% endif %}
		</a>
	</li>
	<li>
		<form method="post" action="/-/logout">
			{{ macros.csrf_token() }}
			<button type="submit" class="btn btn-link"><i class="fa fa-power-off"></i> Log-out</button>
		</form>
	</li>
	{% if utils.userIsAdmin() %}
	<li>
		<a href="/-/admin"><i class="fa fa-wrench"></i> <span class="hidden-lg hidden-md hidden-sm">Admin Dashboard</span></a>
	</li>
	{% endif %}
</ul>
{% endblock %}

{% block styles %}
{{ macros.csrf_token_meta() }}
<link href="{{ macros.asset('css/vendor-backend.min.css') }}" rel="stylesheet">
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.1/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
<link href="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2.min.css" rel="stylesheet">
<link href="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2-bootstrap.min.css" rel="stylesheet">
<link href="{{ macros.asset('css/app-backend.min.css') }}" rel="stylesheet">
{% endblock %}

{% block scripts %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/knockout/3.2.0/knockout-min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.1/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2.min.js"></script>
<script src="{{ macros.asset('js/vendor-backend.min.js') }}"></script>
<script src="{{ macros.asset('js/i18n/' ~ app.language ~ '.min.js') }}"></script>
<script src="{{ macros.asset('js/app-backend.min.js') }}"></script>
{% endblock %}
