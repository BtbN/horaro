{% extends "admin/layout.twig" %}
{% import "macros.twig" as macros %}

{% block title %}Events &ndash; Admin{% endblock %}

{% block content %}
<h2>Events</h2>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Slug</th>
			<th>Owner</th>
			<th>Website</th>
			<th>Twitter</th>
			<th>Twitch</th>
		</tr>
	</thead>

	<tbody>
		{% for event in events %}
		<tr>
			<td>{{ event.id }}</td>
			<td><a href="/-/admin/events/{{ event.id }}/edit">{{ event.name|shorten(40) }}</a></td>
			<td><a href="/{{ event.slug }}" target="_blank"><code>{{ event.slug|shorten(20) }}</code></a></td>
			<td><a href="/-/admin/users/{{ event.user.id }}/edit">{{ utils.roleIcon(event.user.role)|raw}} {{ event.user.name|shorten(30) }}</a></td>
			<td>{{ event.website|shorten(30) }}</td>
			<td>{{ event.twitter|shorten(20) }}</td>
			<td>{{ event.twitch|shorten(20) }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{{ macros.render_pager(pager, '/-/admin/events') }}
{% endblock %}
