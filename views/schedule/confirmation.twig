{% extends "backend.twig" %}
{% import "macros.twig" as macros %}

{% block title %}{{ schedule.name }} &ndash; {{ schedule.event.name }}{% endblock %}

{% block content %}
<ul class="breadcrumb" style="margin-bottom: 5px;">
	<li><a href="/-/home">Home</a></li>
	<li><a href="/-/events/{{ schedule.event.id }}">{{ schedule.event.name|shorten(45) }}</a></li>
	<li><a href="/-/schedules/{{ schedule.id }}">{{ schedule.name|shorten(45) }}</a></li>
	<li>Delete Schedule&hellip;</li>
</ul>

<div class="row">
	<div class="col-lg-12">
		<h2>You are about to delete &quot;{{ schedule.name }}&quot;!</h2>
		<p>Deleting a schedule will delete all scheduled items and settings, but leaves the event to
		which the schedule belongs untouched.<br>
		<strong>There is no un-do for this.</strong></p>
	</div>
</div>

<div class="row">
	<div class="col-lg-3 col-lg-offset-3 col-md-3 col-md-offset-3 col-sm-4 col-sm-offset-2 col-xs-6 text-center">
		<a href="/-/schedules/{{ schedule.id }}" class="btn btn-default btn-lg"><i class="fa fa-undo"></i> No thanks</a>
	</div>

	<div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 text-center">
		<form method="post" action="/-/schedules/{{ schedule.id }}">
			<div>
				{{ macros.csrf_token() }}
				<input type="hidden" id="_method" name="_method" value="DELETE" />
				<button type="submit" class="btn btn-danger btn-lg"><i class="fa fa-trash-o"></i> Yes, kill it!</button>
			</div>
		</form>
	</div>
</div>

{% endblock %}
